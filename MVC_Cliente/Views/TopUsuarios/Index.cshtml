
@{
    ViewBag.Title = "Listado Top 5 Usuarios de reservas";
}

<section class="drivers-area bg-img" style="background-image: url(https://centralrestaurante.com.pe/assets/images/hero.jpg)">
    <div class="title-area">
        <p>Listado</p>
        <h2>Top 5 Usuarios de reservas</h2>
    </div>
</section>

<div class="container" style="padding-top: 100px; padding-bottom: 100px;">
    @using (Html.BeginForm("Buscar", "TopUsuarios"))
    {
        <table cellpading="2" cellspacing="2" border="1" width="600">
            <tr>
                <td>
                    @Html.DropDownList("cboRestaurantes", (IEnumerable<SelectListItem>)ViewBag.ListarRestaurantes)
                </td>
                <td>
                    <input type="submit" name="Buscar" />
                </td>
            </tr>
        </table>
    }

    <table id="table-inicio" class="table">
        <thead>
            <tr>
                <th>Restaurante</th>
                <th>Usuario</th>
                <th>Cant. Veces</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reserva in ViewBag.ListarReservas)
            {
            <tr>
                <th>@reserva.Nom_Restaurante</th>
                <th>@reserva.Usua_Nombre @reserva.Usua_Apellido</th>
                <th class="text-center">@reserva.Cant_Veces</th>
            </tr>
            }
        </tbody>
    </table>
</div>