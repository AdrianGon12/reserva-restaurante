
@{
    ViewBag.Title = "Listado Restaurantes";
}

<section class="drivers-area bg-img" style="background-image: url(https://cdn.otstatic.com/cfe/7/images/25161502-fbb7de.jpg)">
    <div class="title-area">
        <p>Listado</p>
        <h2>Restaurantes</h2>
    </div>
</section>

<div class="container" style="padding-top: 100px; padding-bottom: 100px;">
    @using (Html.BeginForm("Buscar", "Restaurante"))
    {
        <table cellpading="2" cellspacing="2" border="1" width="600">
            <tr>
                <td>
                    @Html.DropDownList("cboDitritos", (IEnumerable<SelectListItem>)ViewBag.ListarDistritos)
                </td>
                <td>
                    @Html.DropDownList("cboCategorias", (IEnumerable<SelectListItem>)ViewBag.ListarCategorias)
                </td>
                <td>
                    <input type="submit" name="Buscar" />
                </td>
            </tr>
        </table>
    }

    <table id="table-inicio" class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Dirección</th>
                <th>Distrito</th>
                <th>Categoría</th>
                <th>Teléfono</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var restaurante in ViewBag.ListarRestaurantes)
            {
                <tr>
                    <th>@restaurante.Nom_Restaurante</th>
                    <th>@restaurante.Direc_Restaurante</th>
                    <th>@restaurante.Nom_DistritoRestaurante</th>
                    <th>@restaurante.Nom_CategoriaRestaurante</th>
                    <th>@restaurante.Tele_Restaurante</th>
                </tr>
            }
        </tbody>
    </table>
</div>

